page{
  padding: 30rpx 20rpx 100rpx 20rpx;
  box-sizing: border-box;
}
.imgOrVideo{
  width: 100%;
}
.imgOrVideo image{
  width: 100%;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.timeReadingNumber{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.time{
  font-size: 22rpx;
}
.readingNumber{
  font-size: 22rpx;
}
.content{
  font-size: 24rpx;
  line-height: 48rpx;
  text-indent: 48rpx;
   border-bottom: 2rpx solid #eee;
   padding-bottom: 20rpx;
   margin-top: 20rpx;
}
.fabulous{
 
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  display: flex;
  flex-direction: column;
}
.fabulous image{
   width: 50rpx;
  height: 50rpx;
  margin-bottom: 6rpx;
}
.fabulousNumber{
  font-size: 26rpx;
  text-align: center;
  color: #666666;
}
.red{
   color: #e64240;
}