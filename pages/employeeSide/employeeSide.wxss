
/* 顶部图片 */
.top{width:100%;
	height:350rpx;
	position:relative;
}

.top .image{width:100%;
	height:100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  -webkit-filter: blur(15px);
  -moz-filter: blur(15px);
  -o-filter: blur(15px);
  -ms-filter: blur(15px);
  filter: blur(15px);
}

.top_image{width:150rpx;
	height:150rpx;
	position:absolute;
	top:80rpx;
	left:40%;
}

.top_image image{width:100%;
	height:100%;
}


.main{width:90%;
	margin:80rpx auto;
	padding-bottom:20rpx;
	overflow: hidden;
}

.main_content{width:50%;
	margin:30rpx auto;
	border-radius: 20rpx;
	box-shadow:0rpx 0rpx 8rpx 1rpx rgb(199, 199, 199);
}

.center{width:80%;
	height:120rpx;
	margin:0rpx auto;
	overflow: hidden;
}

.icon{width:30%;
	height:80rpx;
	margin-top:20rpx;
	float:left;
}

.icon image{width:100%;
	height:100%;
}

.text{width:70%;
	height:80rpx;
	margin-top:20rpx;
	float:left;
	line-height: 80rpx;
	text-align: center;
	font-size:30rpx;
}