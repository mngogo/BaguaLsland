page {
  height: 100%;
  width: 100%;
  background-color: #f1f1f1;
}

.top {
  width: 100%;
  top: 0;
  position: fixed;
  z-index: 999;
  height: 60px;
  background-color: #e64240;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 5px;
}

.serverHead {
  width: 45px;
  height: 45px;
  border-radius: 50%;
}

.smallBox {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.serverName {
  font-size: 13px;
  color: #fff;
  margin-bottom: 3px;
  font-weight: bold;
}

.welcome {
  font-size: 13px;
  color: #fff;
}


.content {
  width: 100%;
  height: 100%;
  padding-top: 70px;
  box-sizing: border-box;
}

/* 底部输入框 */

.bottom {
  width: 100%;
  position: fixed;
  z-index: 999;
}

.bottomBox {
  background-color: #f1f1f1;
  width: 100%;
  height: 60px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 2rpx solid #cdcdcd;
  padding: 0 0 0 8px;
  justify-content: space-between;
}

.functionBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.sendBox {
  position: absolute;
  top: 0;
  right: 8px;
  box-sizing: border-box;
  height: 40px;
  width: 50px;
  background: #f1f1f1;
  z-index: 999;
  font-size: 13px;
  color: #fff;
  text-align: center;
  line-height: 40px;
  background: #e64240;
  padding: 0;
  border-radius: 0 4px 4px 0;
}

.sendBox:after {
  border: 0;
}

.sendBox cover-image {
  width: 35px;
  height: 35px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.imageBox {
  width: 35px;
  height: 35px;
}

.imageBox image {
  width: 100%;
  height: 100%;
}

.input {
  width: 100%;
  height: 40px;
  background-color: #fff;
  padding: 0 60px 0 10px;
  border-radius: 2px;
  font-size: 16px;
  color: #444;
  margin-left: 5px;
  position: relative;
  box-sizing: border-box;
}

/* 表情选择 */

.expressionBox {
  padding: 15px 10px;
  background-color: #f1f1f1;
  width: 100%;
  border-top: 2rpx solid #cdcdcd;
  box-sizing: border-box;
  height: 275px;
}

.expressionBox:after {
  content: '';
  display: block;
  clear: both;
}

.expression {
  float: left;
  font-size: 22px;
  width: 10%;
  margin-bottom: 5px;
}

/* 更多功能 */

.moreBox {
  padding: 20px 30px;
  background-color: #f1f1f1;
  width: 100%;
  height: 100px;
  border-top: 2rpx solid #cdcdcd;
  box-sizing: border-box;
}

.moreBox:after {
  content: '';
  display: block;
  clear: both;
}

.image {
  width: 100rpx;
  height: 100rpx;
  float: left;
  margin-right: 50rpx;
  background-color: #fff;
  display: flex;
  border-radius: 20rpx;
}

.image image {
  width: 70rpx;
  height: 70rpx;
  margin: auto;
}

/* 聊天界面 */

/* 左面 */

.chat {
  display: flex;
  padding: 20rpx;
}

.headPortrait {
  width: 80rpx;
  height: 80rpx;
}

.headPortrait image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.leftTriangle {
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-right: 14rpx solid #fff;
  margin-right: -2rpx;
  align-self: center;
}

.leftMsg {
  font-size: 28rpx;
  color: #444;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 10;
}

/* 右面 */

.rightMsg {
  font-size: 28rpx;
  color: #fff;
  padding: 20rpx;
  background-color: #e64240;
  border-radius: 10rpx;
  z-index: 10;
}

.rightTriangle {
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 14rpx solid #e64240;
  border-right: 10rpx solid transparent;
  margin-left: -2rpx;
  align-self: center;
}
/* 工单提交 */
.workOrder {
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  right: 5px;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
  display: flex;
  box-sizing: border-box;
  z-index: 999;
}

.icon-fankui {
  font-size: 42rpx;
  margin: auto;
  color: #e64240;
}
