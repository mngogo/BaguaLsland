/* 服务内容 */
.recommend {
  text-align: center;
  height: 60rpx;
  margin-top: 20rpx;
  padding:0 22%;
}

.recommend-title {
  display: table;
  width: 100%;
  line-height: 50rpx;
  white-space: nowrap;
  border-spacing: 1rem 0;
  font-size: 28rpx;
  color: #808080;
}

.recommend-title::before, .recommend-title::after {
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#eee, #eee) repeat-x center;
  background-size: 0.1rem 0.1rem;
}

