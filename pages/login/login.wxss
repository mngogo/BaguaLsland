/* 登录 */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.main {
  width: 85%;
  height: 760rpx;
  margin: 0rpx auto;
  background: white;
  margin-top: 280rpx;
  border: 1rpx solid rgb(150, 151, 151);
}

.title {
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  font-weight: 700;
  font-size: 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #eaebf0;
}

.content {
  width: 100%;
  height: 639rpx;
  overflow: hidden;
}

.data {
  width: 85%;
  height: 90rpx;
  background: white;
  border-radius: 6rpx;
  border: 1rpx solid #dbdbdb;
  margin: 40rpx auto 0rpx;
}

.icon {
  width: 15%;
  height: 100%;
  float: left;
  position: relative;
}

.icon image {
  width: 47%;
  height: 40rpx;
  position: absolute;
  top: 25rpx;
  left: 21rpx;
}

.data input {
  width: 85%;
  height: 100%;
  float: left;
  font-size: 28rpx;
}

