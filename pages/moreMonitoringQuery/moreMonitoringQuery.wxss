page{
   background-color: #f9f9f9;
}
.monitorList {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  padding: 18rpx 0;
  box-sizing: border-box;
}

.monitor {
  margin: 0 18rpx 20rpx 18rpx;
  width: calc(50% - 36rpx);
  background-color: #fff;
}

.monitorImage {
  width: 100%;
}

.monitorImage image {
  width: 100%;
  height: 100%;
}

.monitorName {
  font-size: 26rpx;
  text-align: center;
  margin-top: 20rpx;
}