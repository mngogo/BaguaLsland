  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-horn:before {
  content: "\e614";
}

.icon-qianjin:before {
  content: "\e62d";
}

.icon-xiala:before {
  content: "\e672";
}

.icon-jiankongshebei:before {
  content: "\e610";
}

.modular {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  align-items: center;
  position: relative;
  border-bottom: 2rpx solid #eee;
  padding: 16rpx 30rpx;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
}

.modularName {
  font-size: 28rpx;
}

.input {
  position: absolute;
  left: 28%;
  width: calc(72% - 30rpx);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.select {
  position: absolute;
  left: 28%;
  display: flex;
  align-items: center;
  width: 100%;
}

.detailedName {
  font-size: 28rpx;
}

.content {
  width: 100%;
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;
  height: 300rpx;
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.textareaContent {
  width: 100%;
  height: 100%;
}

.wordLimit {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}

.wordNumber {
  color: #e64240;
}

.upload {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 16rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
}

.ui_uploader_cell {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.ui_uploader {
  width: 165rpx;
  height: 165rpx;
  border: 2rpx solid #eee;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.ui_uploader image {
  width: 60%;
  height: 60%;
  margin: 0 auto;
}

.ui_uploader_item {
  width: 165rpx;
  height: 165rpx;
  position: relative;
  margin-right: 40rpx;
  margin-bottom: 30rpx;
}

.ui_uploader_item image {
  width: 100%;
  height: 100%;
}

.ui_uploader_item_icon {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  background: #fff;
  border-radius: 50%;
  z-index: 2;
}

.pictureNumber {
  color: #999;
}

.ui_uploader_item video {
  width: 100%;
  height: 100%;
}

.submit {
  width: 80%;
  height: 80rpx;
  background-color: #e64240;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin: 80rpx auto 0 auto;
}
