
page{
	background: #f3f3f3;
}

.banner{
	width:100%;
	height:350rpx;
	background: white;
	position:relative;
}

.banner .image{width:100%;
	height:280rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  -webkit-filter: blur(15px);
  -moz-filter: blur(15px);
  -o-filter: blur(15px);
  -ms-filter: blur(15px);
  filter: blur(15px);
}

.avatar{width:150rpx;
	height:150rpx;
	position:absolute;
	top:70rpx;
	left:40%;
}

.avatar image{
	width:100%;
	height:100%;
	border-radius: 50%;
}

.username{width:50%;
	height:60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size:30rpx;
	position:absolute;
	bottom:8rpx;
	font-weight: 700;
	left:24%;
}


/* 主体 */
.main{width:100%;
	margin:10rpx auto;
	padding-top:15rpx;
}

.main_center{width:95%;
	margin:0rpx auto;
}

.main_content{width:100%;
	height:100rpx;
	background: white;
	margin:10rpx 0rpx;
}

.content_left{width:15%;
	height:100%;
	float:left;
}

.content_left image{
	width:45%;
	height:45rpx;
	margin-top:30rpx;
	margin-left:20rpx;
}

.content_center{
	width:70%;
	height:100rpx;
	line-height: 100rpx;
	font-size:28rpx;
	color:#808080;
	float:left;
}
.content_right{width:15%;
	height:100%;
	float:left;
}

.content_right image{
	width:35%;
	height:50rpx;
	margin-top:25rpx;
	margin-left:50rpx;
}