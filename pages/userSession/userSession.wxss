page{position:relative}
/* 选项卡 */
.xx_top {
  width: 100%;
  height: 90rpx;
  z-index: 999;
  position: fixed;
  top: 0rpx;
  background: white;
  left: 0rpx;
  box-shadow: 0rpx 0rpx 25rpx 5rpx #d4d3d3;
  border-bottom: 1rpx solid #e2e0e0;
}

.display {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
}

.display-sele {
  font-size: 30rpx;
  width: 25%;
	line-height: 90rpx;
  text-align: center;
  height: 90rpx;
}

.active {
  color: #e64240;
  border-bottom: 1rpx solid #e64240;
}

.flex-grow-1 {
  min-width: 0;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  -webkit-flex-shrink: 1;
  -ms-flex-negative: 1;
  flex-shrink: 1;
}


.main {
  width: 96%;
  margin: 100rpx auto 0rpx;
	padding:20rpx 0rpx;
}

.content {
  width: 100%;
  height: 80rpx;
  background: #f2f2f2;
	border-radius: 20rpx;
}

.main_content {
  width: 96%;
  height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 10rpx auto;
}

.name {
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.date,.status {
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  float: left;
}


.status_content {
  width: 70%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
	background: white;
	margin:3rpx 0rpx 0rpx 50rpx;
	border-radius: 8rpx;
	border:1rpx solid rgb(175, 174, 174);
}

.model{width:100%;
	height:500rpx;
	margin:200rpx auto;
	line-height: 500rpx;
	text-align: center;
	font-size:30rpx;
	color:rgb(112, 111, 111);
}