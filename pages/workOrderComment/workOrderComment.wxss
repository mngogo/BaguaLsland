page {
  background: #f3f3f3;
}

.main {
  width: 96%;
  margin: 0rpx auto;
}

.title {
  width: 70%;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 0rpx auto;
}

.content {
  width: 94%;
  height: 350rpx;
  margin-top: 10rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #d6d6d6;
}

.content_title {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.content_text {
  width: 100%;
  height: 100rpx;
  margin: 20rpx 0rpx;
}

.expression {
  width: 50%;
  height: 100%;
  float: left;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.expression_text {
  width: 30%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #646262;
  font-size: 30rpx;
}

.expression .image {
  width: 80rpx;
  height: 80rpx;
}

.content_comment {
  width: 50%;
  height: 100rpx;
  float: left;
}

.content_comment .image1 {
  width: 50rpx;
  height: 50rpx;
	margin-top:20rpx;
}

.content_comment1 {
  width: 50%;
  height: 100rpx;
  float: left;
	line-height: 100rpx;
	text-align: center;
	font-size:28rpx;
}

.submit {
  width: 30%;
  height: 60rpx;
  border: 1rpx solid rgb(161, 160, 160);
  color: rgb(128, 127, 127);
  margin: 200rpx auto 0rpx;
  background: white;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 10rpx;
}
