.main {
  width: 85%;
  margin: 30rpx auto;
}

.main_content {
  width: 95%;
  margin: 0rpx auto;
	padding-bottom:50rpx;
}

/* 标题 */

.title {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
}

.title_left {
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
}

.title_right {
  width: 75%;
  height: 80rpx;
  float: left;
}

.title_right input {
  width: 90%;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
	border-radius: 10rpx;
  margin-top: 12rpx;
  padding: 0rpx 10rpx;
  border: 1rpx solid #ccc;
}

.title_right .picker {
  width: 90%;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
	border-radius: 10rpx;
  margin-top: 12rpx;
  padding: 0rpx 10rpx;
	color:#8a8888;
  border: 1rpx solid #ccc;
}

.text_content {
  width: 100%;
  font-size: 26rpx;
}

.text_content_title {
  line-height: 80rpx;
}

.text_content_text {
  width: 100%;
  padding-bottom: 20rpx;
}

.text_content_text textarea {
  width: 96%;
	padding:10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.picture {
  width: 100%;
	padding-bottom:30rpx;
	border-bottom:1rpx dotted #ccc
}

.picture_title {
  width: 100%;
  line-height: 80rpx;
  font-size: 26rpx;
}

.picture_content {
  width: 100%;
  height: 120rpx;
  margin: 0rpx auto;
}

.picture_item {
  margin-right: 20rpx;
  position: relative;
  width: 120rpx;
  float: left;
  height: 120rpx;
}

.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  font-size: 30rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 24rpx;
}

.picture_item image {
  width: 120rpx;
  height: 120rpx;
}



.video_item {
  position: relative;
  width: 100%;
  height: 450rpx;
	margin-bottom:20rpx;
}


.video_content {
  width: 100%;
  margin: 0rpx auto;
}

.video_item .videodel {
  position: absolute;
  top: -11rpx;
  right: -5rpx;
  color: #fff;
  border-radius: 50%;
  width: 60rpx;
  font-size: 40rpx;
  height: 60rpx;
  z-index: 9999;
  line-height: 55rpx;
  text-align: center;
  background-color: #f00;
}


.submit{width:40%;
	height:60rpx;
	margin:70rpx auto 0rpx;
	border-radius: 10rpx;
	font-size:26rpx;
	background: #e64240;
	color:white;
	text-align: center;
	line-height: 60rpx;
}


.clear:after{
  content: '';
  display: block;
  visibility: hidden;
  height: 0;
  clear: both;
}