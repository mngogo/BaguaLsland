
/* 微信授权登录 */

.weixin {
  width: 100%;
  margin-top: 100rpx;
}

.header {
  margin: 0rpx auto;
  width: 90%;
  border-bottom: 1px solid #ccc;
  text-align: center;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 180rpx;
  height: 180rpx;
}

.weixin_content {
  margin: 0rpx auto;
  width: 90%;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 32rpx;
}

.apply {
  font-size: 15px;
  margin: 0rpx auto;
  text-align: center;
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.information {
  font-size: 15px;
  margin: 0rpx auto;
  text-align: center;
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
